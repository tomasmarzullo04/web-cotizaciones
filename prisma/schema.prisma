generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model ServiceRate {
  id          String   @id @default(uuid())
  service     String
  frequency   String
  complexity  String
  basePrice   Float
  multiplier  Float
  createdAt   DateTime @default(now())
}


model Quote {
  id                   String   @id @default(uuid())
  clientName           String
  projectType          String
  technicalParameters  String   // Serialized JSON
  estimatedCost        Float
  staffingRequirements String   // Serialized JSON
  diagramDefinition    String
  createdAt            DateTime @default(now())
  
  userId               String   // Required to prevent orphan quotes
  user                 User?    @relation(fields: [userId], references: [id])
  status               String   @default("BORRADOR") // BORRADOR, ENVIADA, APROBADA, RECHAZADA
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") // ADMIN or USER
  createdAt DateTime @default(now())
  quotes    Quote[]
}
