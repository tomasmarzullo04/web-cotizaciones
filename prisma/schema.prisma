generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model ServiceRate {
  id          String   @id @default(uuid())
  service     String
  frequency   String
  complexity  String
  basePrice   Float
  multiplier  Float
  createdAt   DateTime @default(now())
}


model Quote {
  id                   String   @id @default(uuid())
  clientName           String
  projectType          String
  technicalParameters  String   // Serialized JSON
  estimatedCost        Float
  staffingRequirements String   // Serialized JSON
  diagramDefinition    String
  createdAt            DateTime @default(now())
  
  userId               String?  // Optional for now to avoid breaking existing data immediately, or make Required if we reset
  user                 User?    @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") // ADMIN or USER
  createdAt DateTime @default(now())
  quotes    Quote[]
}
